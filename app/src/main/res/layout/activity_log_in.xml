<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.marni.orderapp.presentation.activities.LogInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/textViewEmailaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:contentDescription="@string/company_image"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:src="@mipmap/rsz_3logo" />

    <TextView
        android:id="@+id/textViewEmailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_editTextEmailaddress"
        android:layout_alignStart="@+id/login_editTextEmailaddress"
        android:text="@string/emailaddress"
        android:textColor="#000"
        android:textSize="@dimen/textsize" />

    <EditText
        android:id="@+id/login_editTextEmailaddress"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/textsize" />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_editTextPassword"
        android:layout_alignStart="@+id/login_editTextEmailaddress"
        android:text="@string/password"
        android:textColor="#000"
        android:textSize="@dimen/textsize" />

    <EditText
        android:id="@+id/login_editTextPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox_login"
        android:layout_alignStart="@+id/textViewPassword"
        android:inputType="textPassword"
        android:textSize="@dimen/textsize" />

    <CheckBox
        android:id="@+id/checkBox_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSignIn"
        android:layout_alignStart="@+id/login_editTextPassword"
        android:layout_marginBottom="37.5dp"
        android:text="@string/remember_credentials" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewNoAccountYet"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_in" />

    <TextView
        android:id="@+id/textViewNoAccountYet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="18dp"
        android:text="@string/no_account_yet_register_here"
        android:textColor="#000"
        android:textSize="14sp" />

</RelativeLayout>
