<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:padding="@dimen/paddingProduct"
                android:text="1"
                android:textSize="@dimen/textsizeProduct" />

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewOrderId"
                android:layout_alignStart="@+id/textViewOrderId"
                android:layout_below="@+id/textViewOrderId"
                android:padding="@dimen/paddingProduct"
                android:text="Paid"
                android:textSize="@dimen/textsizeProduct" />

            <TextView
                android:id="@+id/textViewDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:padding="@dimen/paddingProduct"
                android:text="8-5-2017 12:01"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="@dimen/textsizeProduct" />

            <TextView
                android:id="@+id/textViewTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewDateTime"
                android:layout_alignRight="@+id/textViewDateTime"
                android:layout_below="@+id/textViewDateTime"
                android:padding="@dimen/paddingProduct"
                android:text="$10.00"
                android:textSize="@dimen/textsizeProduct" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>