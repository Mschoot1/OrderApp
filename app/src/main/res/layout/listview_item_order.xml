<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:padding="@dimen/paddingProduct"
        android:text="1"
        android:textSize="@dimen/textsizeProduct" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewOrderId"
        android:layout_alignStart="@+id/textViewOrderId"
        android:layout_below="@+id/textViewOrderId"
        android:padding="@dimen/paddingProduct"
        android:text="Paid"
        android:textSize="@dimen/textsizeProduct" />

    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:padding="@dimen/paddingProduct"
        android:text="8-5-2017 12:01"
        android:textSize="@dimen/textsizeProduct" />

    <TextView
        android:id="@+id/textViewTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewDateTime"
        android:layout_alignRight="@+id/textViewDateTime"
        android:layout_below="@+id/textViewDateTime"
        android:padding="@dimen/paddingProduct"
        android:text="$10.00"
        android:textSize="@dimen/textsizeProduct" />

</RelativeLayout>