<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/textViewDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:padding="@dimen/paddingProduct"
                android:text="8-5-2017 12:01"
                android:textSize="@dimen/textsizeProduct"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:padding="@dimen/paddingProduct"
                android:text="Paid"
                android:textSize="@dimen/textsizeProduct" />

            <ImageView
                android:id="@+id/imageView_check"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="13dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textViewDateTime"
                android:layout_alignBottom="@+id/textViewTotalPrice"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check_black_24dp"
                android:tint="@color/colorAccent"/>

            <TextView
                android:id="@+id/textViewTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_below="@id/textViewDateTime"
                android:padding="@dimen/paddingProduct"
                android:text="$10.00"
                android:textSize="@dimen/textsizeProduct" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>