<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewAllergyIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/description" />

    <TextView
        android:id="@+id/textViewAllergyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_allergy_symbol"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewAllergyIcon"
        android:layout_toEndOf="@+id/imageViewAllergyIcon" />

</RelativeLayout>