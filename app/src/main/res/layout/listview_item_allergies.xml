<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewAllergies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewAllergyIcon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/description"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_marginLeft="3dp"
        android:id="@+id/textViewAllergyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_allergy_symbol"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewAllergyIcon"
        android:layout_toEndOf="@+id/imageViewAllergyIcon"
        android:textColor="@color/black_text"
        android:layout_gravity="center"/>

        </LinearLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>